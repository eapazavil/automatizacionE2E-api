{
  "name": "saucedemo-e2e-api-tests",
  "version": "1.0.0",
  "description": "E2E and API tests for SauceDemo application using Screenplay pattern",
  "scripts": {
    "test:e2e": "cucumber-js --format json:cucumber-report.json --format html:cucumber-report.html",
    "test:api": "playwright test tests/api/*.test.ts --reporter=json,html",
    "test": "npm run test:e2e && npm run test:api",
    "pretest": "npm install",
    "posttest": "npm run generate-report"
  },
  "dependencies": {
    "@cucumber/cucumber": "^10.0.1",
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "dotenv": "^16.3.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/ajv": "^0.0.5",
    "@types/cucumber": "^6.0.1",
    "ajv": "^8.17.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "msw": "^2.12.1",
    "ts-node": "^10.9.2"
  }
}
