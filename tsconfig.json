{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "outDir": "dist",
    "types": ["node", "jest", "@playwright/test", "@cucumber/cucumber"],
    "resolveJsonModule": true
  },
  "include": ["**/*.ts", "features/**/*.ts"],
  "exclude": ["node_modules"]
}